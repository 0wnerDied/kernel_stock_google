&soc {
	thermal-zones {
		abc_thermal: abc-thermal {
			polling-delay-passive = <0>; /* milliseconds */
			polling-delay = <0>; /* milliseconds */
			thermal-sensors = <&airbrush_tmu>;
			/* temperature and hysteresis are in millicelsius */
			trips {
				cpu-alert-0 {
					temperature = <60000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-1 {
					temperature = <70000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-2 {
					temperature = <80000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-3 {
					temperature = <90000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-4 {
					temperature = <100000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-5 {
					temperature = <110000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-alert-6 {
					temperature = <120000>;
					hysteresis = <5000>;
					type = "passive";
				};
				cpu-crit-0 {
					temperature = <130000>;
					hysteresis = <0>;
					type = "critical";
				};
			};
		};
	};
};

